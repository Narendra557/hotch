<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.com.hellopeople.hotch.ConfirmParticipationActivity"
    android:background="#272930">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout7"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/explore_activities_button"
            android:layout_weight="1"
            android:textColor="@drawable/white_text_color"
            android:textSize="8sp"
            android:background="#a71620"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:drawableTop="@drawable/explore_button"
            android:padding="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/our_events_button"
            android:padding="8dp"
            android:id="@+id/our_events_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#8f1922" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/trending_button"
            android:padding="8dp"
            android:id="@+id/trending_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#7f171e" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/recommendation_button"
            android:padding="8dp"
            android:id="@+id/recommendations_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#7b1220" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_below="@+id/linearLayout7"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/relativeLayout14"
                android:background="@drawable/light_grey_round_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_name"
                    android:id="@+id/textView26"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_description"
                    android:id="@+id/textView31"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView26"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/amount"
                    android:id="@+id/textView32"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView31"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView37"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_above="@+id/textView41"
                    android:layout_alignLeft="@+id/textView45"
                    android:layout_alignStart="@+id/textView45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/amount"
                    android:id="@+id/amount_text"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView37"
                    android:layout_toRightOf="@+id/textView37"
                    android:layout_toEndOf="@+id/textView37" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/payment_method"
                    android:id="@+id/textView41"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView32"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView45"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView41"
                    android:layout_toRightOf="@+id/textView41"
                    android:layout_toEndOf="@+id/textView41" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/paypal"
                    android:id="@+id/payment_method_button"
                    android:background="@drawable/dark_white_round_corners"
                    android:gravity="left|center_vertical"
                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_below="@+id/amount_text"
                    android:layout_toRightOf="@+id/textView45"
                    android:layout_toEndOf="@+id/textView45"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/time_selection"
                    android:id="@+id/button5"
                    android:background="@drawable/dark_white_round_corners"
                    android:gravity="left|center_vertical"
                    android:drawableRight="@drawable/register_date_of_birth"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_below="@+id/payment_method_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/no_of_participants"
                    android:id="@+id/button6"
                    android:background="@drawable/dark_white_round_corners"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_below="@+id/button5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/need_pickup"
                    android:id="@+id/button7"
                    android:background="@drawable/dark_white_round_corners"
                    android:gravity="left|center_vertical"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_below="@+id/button6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff" />

            </RelativeLayout>

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/continue_button"
                android:background="@drawable/red_button"
                android:text="@string/continue_1"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:layout_below="@+id/relativeLayout14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/type_message_to_organizer"
                android:id="@+id/textView48"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/message_text"
                android:layout_alignStart="@+id/message_text"
                android:layout_below="@+id/continue_button"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:id="@+id/message_text"
                android:background="@drawable/dark_white_round_corners"
                android:textSize="12sp"
                android:textColor="#fff"
                android:inputType="textMultiLine"
                android:hint="@string/activity_description"
                android:textColorHint="#000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView48"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/type_message" />

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/send_message_button"
                android:background="@drawable/red_button"
                android:text="@string/send_message"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/message_text"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout8"
        android:weightSum="4"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/my_profile_button"
            android:padding="8dp"
            android:id="@+id/my_profile_button"
            android:layout_weight="1"
            android:textColor="@drawable/white_text_color"
            android:textSize="8sp"
            android:background="#a71621"
            android:textAllCaps="false" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/upcoming_button"
            android:padding="8dp"
            android:id="@+id/upcoming_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            android:background="#901a23" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/share_button"
            android:padding="8dp"
            android:id="@+id/sell_or_share_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="#7f171f"
            android:paddingLeft="13dp"
            android:paddingRight="13dp" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/friends_button"
            android:padding="8dp"
            android:id="@+id/friends_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            android:background="#7b1221" />
    </LinearLayout>

</RelativeLayout>
