<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272930"
    tools:context="au.com.hellopeople.hotch.ViewActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout7"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/explore_activities_button"
            android:layout_weight="1"
            android:textColor="@drawable/white_text_color"
            android:textSize="8sp"
            android:background="#a71620"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:drawableTop="@drawable/explore_button"
            android:padding="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/our_events_button"
            android:padding="8dp"
            android:id="@+id/our_events_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#8f1922" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/trending_button"
            android:padding="8dp"
            android:id="@+id/trending_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#7f171e" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/recommendation_button"
            android:padding="8dp"
            android:id="@+id/recommendations_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle"
            android:background="#7b1220" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/linearLayout7" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:id="@+id/relativeLayout12">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/register_top_bg"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout11"
                android:layout_below="@+id/relativeLayout12"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_name"
                    android:id="@+id/activity_name"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_description"
                    android:id="@+id/activity_desc"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/activity_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/address"
                    android:id="@+id/activity_address"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/activity_desc"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/time_selection"
                    android:id="@+id/textView27"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/activity_address"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/duration"
                    android:id="@+id/textView28"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignLeft="@+id/textView27"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_below="@+id/textView27"
                    android:layout_alignBottom="@+id/textView30" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView29"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/activity_address"
                    android:layout_toRightOf="@+id/textView35"
                    android:layout_alignStart="@+id/textView35" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView30"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/duration"
                    android:layout_toLeftOf="@+id/duration"
                    android:layout_toStartOf="@+id/duration" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/time_selection"
                    android:id="@+id/time_selection"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView29"
                    android:layout_toRightOf="@+id/textView29"
                    android:layout_toEndOf="@+id/textView29" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/duration"
                    android:id="@+id/duration"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView29"
                    android:layout_toRightOf="@+id/textView29"
                    android:layout_toEndOf="@+id/textView29" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/seller_offer_pickup"
                    android:id="@+id/textView33"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView28"
                    android:layout_alignLeft="@+id/textView28"
                    android:layout_alignStart="@+id/textView28" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView35"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/textView33"
                    android:layout_below="@+id/textView30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/yes"
                    android:id="@+id/seller_offer_pickup"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView30"
                    android:layout_toRightOf="@+id/textView35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/event_type"
                    android:id="@+id/textView39"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textView33"
                    android:layout_alignLeft="@+id/textView33"
                    android:layout_alignStart="@+id/textView33" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView40"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView39"
                    android:layout_alignLeft="@+id/textView35"
                    android:layout_alignStart="@+id/textView35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/individual"
                    android:id="@+id/event_type"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView40"
                    android:layout_toRightOf="@+id/textView40"
                    android:layout_toEndOf="@+id/textView40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/price"
                    android:id="@+id/textView42"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView39"
                    android:layout_alignLeft="@+id/textView39"
                    android:layout_alignStart="@+id/textView39" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=":"
                    android:id="@+id/textView44"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView42"
                    android:layout_alignLeft="@+id/textView40"
                    android:layout_alignStart="@+id/textView40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/price"
                    android:id="@+id/price"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#d7d7d7"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/textView44"
                    android:layout_toRightOf="@+id/textView44"
                    android:layout_toEndOf="@+id/textView44" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout11"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/gridView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:background="#15161a" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:text="@string/book_now1"
                    android:id="@+id/button17"
                    android:background="@drawable/red_button"
                    android:textColor="@drawable/white_text_color"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/gridView"
                    android:layout_marginBottom="10dp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout8"
        android:weightSum="4"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/my_profile_button"
            android:padding="8dp"
            android:id="@+id/my_profile_button"
            android:layout_weight="1"
            android:textColor="@drawable/white_text_color"
            android:textSize="8sp"
            android:background="#a71621"
            android:textAllCaps="false" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/upcoming_button"
            android:padding="8dp"
            android:id="@+id/upcoming_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            android:background="#901a23" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/share_button"
            android:padding="8dp"
            android:id="@+id/sell_or_share_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="#7f171f"
            android:paddingLeft="13dp"
            android:paddingRight="13dp" />

        <Button
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/friends_button"
            android:padding="8dp"
            android:id="@+id/friends_button"
            android:layout_weight="1"
            android:textSize="8sp"
            android:textColor="@drawable/white_text_color"
            android:textAllCaps="false"
            android:background="#7b1221" />
    </LinearLayout>

</RelativeLayout>
