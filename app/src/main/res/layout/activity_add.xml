<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.com.hellopeople.hotch.AddActivity"
    android:background="#fff">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/activity_1"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/cancel_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/red_button"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="13sp"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/save_button"
            android:background="@drawable/red_button"
            android:text="@string/save"
            android:textColor="#fff"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:textAllCaps="false"
            style="?android:borderlessButtonStyle" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:id="@+id/top_button_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/dark_blue_circle"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textAllCaps="false"
                style="?android:borderlessButtonStyle"
                android:onClick="activityButton1" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:id="@+id/top_button_2"
                android:layout_marginRight="25dp"
                android:background="@drawable/blue_circle"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textAllCaps="false"
                style="?android:borderlessButtonStyle"
                android:onClick="activityButton2" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:id="@+id/top_button_3"
                android:layout_marginRight="25dp"
                android:background="@drawable/blue_circle"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textAllCaps="false"
                style="?android:borderlessButtonStyle"
                android:onClick="activityButton3" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:id="@+id/top_button_4"
                android:layout_marginRight="25dp"
                android:background="@drawable/blue_circle"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textAllCaps="false"
                style="?android:borderlessButtonStyle"
                android:onClick="activityButton4" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/relativeLayout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="500dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_info_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_information"
                    android:id="@+id/register_content_heading"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#183683"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/please_fill_in_the_details_below_for_the_activity"
                    android:id="@+id/register_content_description"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#183683"
                    android:layout_below="@+id/register_content_heading"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/other_info_layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/other_information"
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#183683"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/please_fill_in_the_details_below_for_the_activity"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#183683"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contact_info_layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/location_information"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#183683"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/please_fill_in_the_details_below_for_the_activity_location"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#183683"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_images_layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity_images"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#183683"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/please_upload_images_for_the_activity_gallery"
                    android:id="@+id/textView8"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#183683"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_grey_round_corners"
                android:id="@+id/activity_information_content"
                android:layout_below="@+id/activity_info_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <au.com.hellopeople.hotch.RoundedImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:id="@+id/activity_pic_image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/register_profile_pic" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:id="@+id/upload_activity_pic_button"
                    android:background="@drawable/red_round_corners"
                    android:text="@string/upload_activity_image"
                    android:textColor="#fff"
                    android:textSize="11sp"
                    android:layout_below="@+id/activity_pic_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    style="?android:borderlessButtonStyle"
                    android:onClick="uploadActivityImage" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/activity_name_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/first_name"
                    android:textColorHint="#000"
                    android:layout_below="@+id/upload_activity_pic_button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:id="@+id/activity_description_text"
                    android:background="@drawable/white_round_corners"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:inputType="textMultiLine"
                    android:hint="@string/activity_description"
                    android:textColorHint="#000"
                    android:layout_below="@+id/activity_name_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/activity_start_date"
                    android:id="@+id/activity_start_date_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/register_date_of_birth"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/activity_description_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    style="?android:borderlessButtonStyle"
                    android:onClick="activityStartDateButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/activity_end_date"
                    android:id="@+id/activity_end_date_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/register_date_of_birth"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/activity_start_date_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:nestedScrollingEnabled="false"
                    android:onClick="activityEndDateButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/activity_start_time"
                    android:id="@+id/activity_start_time_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/register_date_of_birth"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/activity_end_date_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="activityStartTimeButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/activity_end_time"
                    android:id="@+id/activity_end_time_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/register_date_of_birth"
                    android:paddingRight="5dp"
                    android:layout_below="@+id/activity_start_time_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="activityEndTimeButton" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_grey_round_corners"
                android:id="@+id/other_information_content"
                android:layout_below="@+id/other_info_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/activity_type"
                    android:id="@+id/activity_type_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="activityTypeButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/interests"
                    android:id="@+id/interests_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/activity_type_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="interestsButton" />

                <LinearLayout
                    android:id="@+id/is_event_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/interests_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="left|center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/event"
                        android:id="@+id/textView43"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="3dp" />

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="@string/yes"
                        android:id="@+id/is_event_button"
                        android:drawableLeft="@drawable/remember_me_select_grey"
                        android:background="@color/transperent_color"
                        android:textColor="#a6a6a6"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:textAllCaps="false"
                        style="?android:borderlessButtonStyle"
                        android:layout_alignTop="@+id/textView43"
                        android:layout_toRightOf="@+id/textView43"
                        android:layout_toEndOf="@+id/textView43"
                        android:paddingRight="10dp"
                        android:onClick="isEventButton" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/language_conducted"
                    android:id="@+id/languages_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/is_event_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="languagesButton" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/amount_text"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/amount_per_participant"
                    android:textColorHint="#000"
                    android:inputType="phone"
                    android:layout_below="@+id/age_group_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/currency"
                    android:id="@+id/currency_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/amount_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="currencyButton" />

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/suitable_age_groups"
                    android:id="@+id/age_group_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_below="@+id/languages_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:onClick="ageGroupButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_grey_round_corners"
                android:id="@+id/contact_information_content"
                android:layout_below="@+id/contact_info_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/country"
                    android:id="@+id/country_button"
                    android:background="@drawable/white_round_corners"
                    android:gravity="left|center_vertical"

                    android:drawableRight="@drawable/down_arrow_icon"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/state_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    style="?android:borderlessButtonStyle"
                    android:onClick="countryButton" />
                <!--<fragment-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:name="com.google.android.gms.maps.MapFragment"-->
                <!--android:id="@+id/map" />-->
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/map"
                    tools:context=".MapsActivity"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_below="@+id/country_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/street_address_text"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/street_address"
                    android:textColorHint="#000"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/textView4"
                    android:inputType="textPostalAddress|text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/address"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_alignLeft="@+id/street_address_text"
                    android:layout_alignStart="@+id/street_address_text"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/apartment_text"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/apartment_suit_unit_etc_optional"
                    android:textColorHint="#000"
                    android:inputType="textPostalAddress|text"
                    android:layout_below="@+id/street_address_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/suburb_text"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/suburb"
                    android:textColorHint="#000"
                    android:inputType="textPostalAddress|text"
                    android:layout_below="@+id/apartment_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/state_text"
                    android:background="@drawable/white_round_corners"

                    android:textSize="14sp"
                    android:textColor="#000"
                    android:hint="@string/state"
                    android:textColorHint="#000"
                    android:inputType="textPostalAddress|text"
                    android:layout_below="@+id/suburb_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:text="@string/pick_my_current_location"
                    android:id="@+id/pick_my_location_button"
                    android:drawableLeft="@drawable/remember_me_select_grey"
                    android:background="@color/transperent_color"
                    android:textColor="#a6a6a6"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/map"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textAllCaps="false"
                    style="?android:borderlessButtonStyle"
                    android:onClick="pickMyLocationButton" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/pick_my_location_button"
                    android:layout_centerHorizontal="true"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/status"
                        android:id="@+id/textView10"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_below="@+id/interests_button"
                        android:layout_alignLeft="@+id/interests_button"
                        android:layout_alignStart="@+id/interests_button"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="3dp" />

                    <Button
                        style="?android:borderlessButtonStyle"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:text="@string/active"
                        android:id="@+id/active_button"
                        android:drawableLeft="@drawable/remember_me_select_grey"
                        android:background="@color/transperent_color"
                        android:textColor="#a6a6a6"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:textAllCaps="false"
                        android:layout_alignTop="@+id/textView10"
                        android:layout_toRightOf="@+id/textView10"
                        android:layout_toEndOf="@+id/textView10"
                        android:paddingRight="10dp"
                        android:onClick="activityStatusButton" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_grey_round_corners"
                android:id="@+id/activity_images_content"
                android:layout_below="@+id/activity_images_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:minHeight="400dp"
                android:visibility="gone">

                <Button
                    style="?android:borderlessButtonStyle"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:id="@+id/click_here_to_pick_images_button"
                    android:background="@drawable/red_button"
                    android:text="@string/click_here_to_select_images"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="uploadImagesButton" />

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gridView"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/click_here_to_pick_images_button"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
